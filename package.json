{
  "name": "home-budget-manager",
  "version": "1.0.3",
  "description": "A comprehensive personal and family budget management application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "postinstall": "node scripts/install-prerequisites.js",
    "generate-icons": "node scripts/generate-icons.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl"
  },
  "author": "Erez Rozenbaum",
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^8.7.0",
    "chart.js": "^4.4.1",
    "compression": "^1.7.4",
    "countries-and-timezones": "^2.0.0",
    "crypto-js": "^4.2.0",
    "date-fns": "2.30.0",
    "date-fns-tz": "^2.0.0",
    "decimal.js": "^10.4.3",
    "electron-log": "^5.1.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "finnhub": "^1.2.18",
    "helmet": "^7.1.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "node-cache": "^5.1.2",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.9",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.1",
    "react-router-dom": "^6.22.0",
    "react-table": "^7.8.0",
    "react-toastify": "^10.0.4",
    "speakeasy": "^2.0.0",
    "supertest": "^6.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tailwindcss": "^3.4.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@electron/asar": "^3.2.8",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.17",
    "electron": "28.3.3",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.35",
    "sharp": "^0.34.1",
    "vite": "^6.3.3"
  },
  "build": {
    "appId": "com.homebudgetmanager.app",
    "productName": "Home Budget Manager",
    "copyright": "Copyright Â© 2024 Erez Rozenbaum",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "package.json",
      {
        "from": "src/renderer",
        "to": "renderer",
        "filter": ["*.html", "*.css", "*.js"]
      }
    ],
    "extraResources": [
      {
        "from": "scripts/",
        "to": "scripts",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "docs/",
        "to": "docs",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "scripts/init-database.js",
      "node_modules/bcrypt/**/*",
      "node_modules/node-schedule/**/*",
      "node_modules/nodemailer/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Finance"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Home Budget Manager",
      "perMachine": true,
      "allowElevation": true
    }
  }
}
