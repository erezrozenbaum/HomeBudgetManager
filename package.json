{
  "name": "home-budget-manager",
  "version": "1.0.1",
  "description": "A comprehensive personal and family budget management application",
  "main": "main.js",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\" \"npm run watch\"",
    "watch": "webpack --config webpack.config.js --watch",
    "build": "webpack --config webpack.config.js --mode production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "postinstall": "node scripts/install-prerequisites.js",
    "prebuild:app": "npm run build",
    "build:app": "electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run prebuild:app && electron-builder --mac",
    "build:linux": "npm run prebuild:app && electron-builder --linux",
    "build:all": "npm run prebuild:app && electron-builder -mwl"
  },
  "author": "Erez Rozenbaum",
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^7.4.3",
    "chart.js": "^4.4.1",
    "compression": "^1.7.4",
    "countries-and-timezones": "^2.0.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "decimal.js": "^10.4.3",
    "electron-log": "^5.1.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "finnhub": "^1.2.18",
    "helmet": "^7.1.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "node-cache": "^5.1.2",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.9",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.1",
    "react-router-dom": "^6.22.0",
    "react-table": "^7.8.0",
    "react-toastify": "^10.0.4",
    "speakeasy": "^2.0.0",
    "supertest": "^6.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tailwindcss": "^3.4.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "exceljs": "^4.4.0",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@electron/asar": "^3.2.8",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.10.0",
    "electron": "^22.3.27",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "html-webpack-plugin": "^5.6.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.0",
    "sharp": "^0.32.6",
    "style-loader": "^3.3.4",
    "webpack": "^5.99.6",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.homebudgetmanager.app",
    "productName": "Home Budget Manager",
    "copyright": "Copyright Â© 2024 Erez Rozenbaum",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "scripts/",
        "to": "scripts",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "docs/",
        "to": "docs",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "scripts/init-database.js",
      "node_modules/bcrypt/**/*",
      "node_modules/node-schedule/**/*",
      "node_modules/nodemailer/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Finance"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Home Budget Manager",
      "perMachine": true,
      "allowElevation": true
    }
  }
}
