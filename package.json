{
  "name": "my-budget-manager",
  "version": "1.0.0",
  "description": "A privacy-focused, fully-featured personal/family budget management tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\" \"npm run watch\"",
    "watch": "webpack --config webpack.config.js --watch",
    "build": "webpack --config webpack.config.js --mode production",
    "package": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "sqlite3": "^5.1.7",
    "express": "^4.18.2",
    "electron-store": "^8.1.0",
    "tailwindcss": "^3.4.1",
    "chart.js": "^4.4.1",
    "react-chartjs-2": "^5.2.0",
    "xlsx": "^0.18.5",
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "react-hook-form": "^7.50.1",
    "react-toastify": "^10.0.4",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "node-cache": "^5.1.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "crypto-js": "^4.2.0",
    "date-fns-tz": "^2.0.0",
    "countries-and-timezones": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.10.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.4",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.0"
  },
  "build": {
    "appId": "com.mybudgetmanager.app",
    "productName": "My Budget Manager",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
} 